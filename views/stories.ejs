<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

      <!-- Fonts -->
      <link rel="preconnect" href="https://fonts.gstatic.com">
      <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300&display=swap" rel="stylesheet">
      <link rel="preconnect" href="https://fonts.gstatic.com">
      <link href="https://fonts.googleapis.com/css2?family=Monoton&display=swap" rel="stylesheet">

      <script defer src="/scripts/app.js"></script>

    <!--Styles-->
    <link rel="stylesheet" href="styles/layout.css">

    <title>Home Page</title>

  </head>

  <body>
    <%- include('partials/_header') %>
    <main class="create-stories">
      <div class="container">
        <form method="POST">
          <input class="form-control" type="text" name="title" placeholder="Story Title" style="width: 300px; margin: 1em">
          <textarea class="new-story" name="content" placeholder="Start your story here..." rows="6"></textarea>
          <button type="submit" class="submit-button" >Post</button>
          </div>
        </form>
      </div>
    </main>

    <div class="stories-container">
      <div class="completed-stories">
        <h1>Completed Stories</h1>
        <% for (const each of completeStories) {%>
          <div class="story">
            <header>
              <a href="/stories/<%= each.id %>?created_by_user=<%=each.user_id %>"><%= each.title %></a>
            </header>
            <hr>
            <footer>
              <p><%= each.created_at %></p>
            </footer>
          </div>
          <% } %>
        </div>
        
        <div class="inprogress-stories">
          <h1>In-Progress Stories</h1>
          <% for (const each of inprogressStories) {%>
            <div class="story">
              <header>
            <a href="/stories/<%= each.id %>?created_by_user=<%=each.user_id %>"><%= each.title %></a>
          </header>

           <hr>
          <footer>
            <p>Created at: <%= each.created_at %></p>
          </footer>
          </div>
          <% } %>
    </div>

  </body>
</html>